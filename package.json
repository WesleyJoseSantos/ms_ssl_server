{
  "name": "ms_ssl_server",
  "version": "1.0.0",
  "main": "dist/main.js",
  "author": "Wesley Jos√© <wesley@hedro.com.br>",
  "license": "MIT",
  "scripts": {
    "start:dev": "NODE_ENV=development yarn nodemon -r tsconfig-paths/register --inspect=0.0.0.0:9335 src/main.ts",
    "start": "NODE_ENV=production node dist/main.js",
    "start:staging": "NODE_ENV=staging yarn nodemon -r tsconfig-paths/register src/main.ts",
    "build": "npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts,.js\" --source-maps inline",
    "test": "jest --passWithNoTests --noStackTrace --runInBand",
    "test:watch": "NODE_ENV=development jest --watchAll --noStackTrace --runInBand",
    "test:staged": "NODE_ENV=development yarn test -- --findRelatedTests src/",
    "test:cov": "NODE_ENV=development jest --coverage",
    "test:coveralls": "NODE_ENV=development yarn run test:ci && coveralls < coverage/lcov.info"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.15.4",
    "@babel/preset-typescript": "^7.15.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1"
  },
  "dependencies": {
    "body-parser": "^1.19.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "mqtt": "^4.3.6",
    "openssl-nodejs": "^1.0.5",
    "pino": "^7.8.0",
    "typescript": "^4.6.3"
  }
}
